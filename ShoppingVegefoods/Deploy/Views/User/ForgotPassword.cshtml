
@{
    ViewBag.Title = "Quên Mật Khẩu - Tài Khoản";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}


<form class="login100-form validate-form" action="tai-khoan/ChangePassword" method="post">
    <span class="login100-form-title p-b-33">
        Quên Mật Khẩu
    </span>
    <div class="alert alert-warning error-info" role="alert" style="display:none;">
    </div>
    <div class="wrap-input100 validate-input" data-validate="Email không hợp lệ: ex@abc.xyz">
        <input class="input100" type="text" name="email" placeholder="Email" id="email" data-forgot="1">
        <span class="focus-input100-1"></span>
        <span class="focus-input100-2"></span>
    </div>
    <div class="wrap-input100 validate-input" data-validate="Nhập tài khoản">
        <input class="input100" type="text" name="username" placeholder="Tài khoản" id="username" data-forgot="1">
        <span class="focus-input100-1"></span>
        <span class="focus-input100-2"></span>
    </div>

    <div class="container-login100-form-btn m-t-20">
        <button class="login100-form-btn">
            Submit
        </button>
    </div>


    <div class="text-center p-t-45 p-b-4">
        <span class="txt1">
            Đã có tài khoản?
        </span>

        <a href="@Url.Action("dang-nhap","User")" class="txt2 hov1">
            Đăng Nhập
        </a>
    </div>
    <div class="text-center">
        <span class="txt1">
            Tạo Tài Khoản?
        </span>

        <a href="@Url.Action("dang-ky","User")" class="txt2 hov1">
            Đăng Ký
        </a>
    </div>
</form>



